package Exercises;
import java.util.*;

public class Exercise9 {
	
	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		
		int count = 0;
		String impSent = null;
		String tester = null;
		String cons[] = {"b", "c", "d", "f", "g", "h", "j", "k", "l", "m", "n", "p", "q", "r", "s", "t", "v", "w", "x", "y", "z"};
		
		System.out.println("Enter Text: ");
		impSent = input.nextLine();
		impSent = impSent.toLowerCase();
		
		for(int i = 0; i < impSent.length(); i++) {
			tester = impSent.substring(i, i+1);
			for(int j = 0; j < cons.length - 1; j++) {
				if(tester == cons[j]) {
					count++;
				}
			}
		}
		
		System.out.println("This String contains "+count+" consonants.");
		
		input.close();
	}
}
