package Exercises;
import java.util.*;

public class Exercise3 {
	
	public static void main(String[] args) {
		
		Random rand = new Random();
		int randNum;
		int zero = 0;
		int one = 0;
		int two = 0;
		int three = 0;
		int four = 0;
		int five = 0;
		int six = 0;
		int seven = 0;
		int eight = 0;
		int nine = 0;
		int array[] = new int[10];
		
		for(int i = 0; i < 500; i++) {
			
			randNum = rand.nextInt(9);
			
			if(randNum == 0) {
				zero++;
			}else if(randNum == 1) {
				one++;
			}else if(randNum == 2) {
				two++;
			}else if(randNum == 3) {
				three++;
			}else if(randNum == 4) {
				four++;
			}else if(randNum == 5) {
				five++;
			}else if(randNum == 6) {
				six++;
			}else if(randNum == 7) {
				seven++;
			}else if(randNum == 8) {
				eight++;
			}else if(randNum == 9) {
				nine++;
			}
		}
		
		array[0] = zero;
		array[1] = one;
		array[2] = two;
		array[3] = three;
		array[4] = four;
		array[5] = five;
		array[6] = six;
		array[7] = seven;
		array[8] = eight;
		array[9] = nine;
	
		System.out.println("Number\t\tOccurrences");
		
		for(int i = 0; i < 10; i++) {
			System.out.println(i+"\t\t"+array[i]);
		}
	}
}
