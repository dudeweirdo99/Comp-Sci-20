package Exercises;
import java.util.*;

public class Exercise9 {
	
	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		
		int count = 0;
		String impSent = null;
		String tester = null;
		
		System.out.println("Enter Text: ");
		impSent = input.nextLine();
		impSent = impSent.toLowerCase();
		
		for(int i = 0; i < impSent.length(); i++) {
			tester = impSent.substring(i, i);
			if(tester != "a" && tester != "e" && tester != "i" && tester != "o" && tester != "u" && tester != "y") {
				count++;
			}
			
		}
		
		System.out.println("This String contains "+count+" consonants.");
		
		input.close();
	}
}
